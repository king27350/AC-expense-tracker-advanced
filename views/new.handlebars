<form action="/records" method="POST">
  <div class="container mx-auto mt-5" style="width: 600px;">
    <div class="col-10">

      <div class="d-flex justify-content-between m-3">
        <h5>*必填欄位</h5>
        <h5>請輸入你的支出</h5>
      </div>

      <div class="d-flex justify-content-between m-3">
        <h4>名稱* :</h4>
        <input type="text" placeholder="name" name="name" style="width: 300px;" required>
      </div>


      <div class="d-flex justify-content-between m-3">
        <h4>日期* :</h4>
        <input id="date" type="date" name="date" style="width: 300px;" required>
      </div>

      <div class="d-flex justify-content-between m-3">
        <h4>類別* :</h4>
        <select name="category" style="width: 300px;" required>
          　<option value="food">food</option>
          　<option value="transportation">transportation</option>
          　<option value="other">other</option>
          　<option value="entertainment">entertainment</option>
          <option value="home">home</option>
        </select>
      </div>

      <div class="d-flex justify-content-between m-3">
        <h4>金額* :</h4>
        <input type="text" name="amount" style="width: 300px;" required>
      </div>

      <button class="btn btn-primary" type="submit">新增支出</button>
    </div>
  </div>
</form>